{
	"subtitle": "Loading",
	"background": {
		"color": [
			240,
			248,
			255,
			255
		]
	},
	"widgets": {
		"loading_splash": {
			"type": "image_view",
			"pos": [
				"win_width * 0.5 - 100.0 * scale",
				"win_height * 0.4 - 100.0 * scale"
			],
			"size": [
				"200.0 * scale",
				"200.0 * scale"
			],
			"texture": "gui.splash",
			"border": {
				"color": [
					0,
					0,
					139,
					255
				],
				"width": 3
			}
		},
		"loading_progress_bar": {
			"type": "progress_bar",
			"pos": [
				"100.0",
				"win_height * 0.7"
			],
			"size": [
				"win_width - 200.0",
				"30.0"
			],
			"start_progress": 0,
			"back_color": [
				100,
				149,
				237,
				255
			],
			"progress_color": [
				225,
				255,
				255,
				255
			]
		},
		"loading_message": {
			"type": "text_view",
			"pos": [
				"105.0",
				"win_height * 0.7 + 35.0"
			],
			"size": [
				"0.0",
				"0.0"
			],
			"text_color": [
				0,
				0,
				0,
				255
			],
			"text_size": "20.0 * scale",
			"align": [
				"top"
			],
			"text": "#loading_message.loading"
		}
	},
	"animation": {
		"loading_1": {
			"anims": {
				"loading_splash": {
					"x": {
						"from": "win_width * 0.5 - 100.0 * scale",
						"to": "win_width * 0.5 - 115.0 * scale"
					},
					"y": {
						"from": "win_height * 0.4 - 100.0 * scale",
						"to": "win_height * 0.4 - 115.0 * scale"
					},
					"width": {
						"from": "200.0 * scale",
						"to": "230.0 * scale"
					},
					"height": {
						"from": "200.0 * scale",
						"to": "230.0 * scale"
					}
				}
			},
			"duration": 1000,
			"stay": true
		},
		"loading_2": {
			"anims": {
				"loading_splash": {
					"x": {
						"from": "win_width * 0.5 - 115.0 * scale",
						"to": "win_width * 0.5 - 100.0 * scale"
					},
					"y": {
						"from": "win_height * 0.4 - 115.0 * scale",
						"to": "win_height * 0.4 - 100.0 * scale"
					},
					"width": {
						"from": "230.0 * scale",
						"to": "200.0 * scale"
					},
					"height": {
						"from": "230.0 * scale",
						"to": "200.0 * scale"
					}
				}
			},
			"duration": 1000,
			"stay": true
		},
		"loading": {
			"anim_group": [
				{
					"type": "anim",
					"name": "loading_1"
				},
				{
					"type": "wait",
					"duration": 500
				},
				{
					"type": "anim",
					"name": "loading_2"
				},
				{
					"type": "wait",
					"duration": 500
				}
			],
			"loop": true
		}
	}
}
